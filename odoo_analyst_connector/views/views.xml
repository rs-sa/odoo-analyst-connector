<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_backend" name="iap assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/odoo_analyst_connector/static/src/client_actions/odoo_synk_iframe/odoo_synk_iframe.js"></script>
        </xpath>
    </template>

    <record id="odoo_synk_iframe" model="ir.actions.client">
        <field name="name">Odoo Analyst</field>
        <field name="tag">odoo_synk_iframe</field>
    </record>

    <record id="action_odoo_analyst" model="ir.actions.server">
        <field name="name">Analyst</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="state">code</field>
        <field name="code">action = env.user.odoo_analyst_connector()</field>
    </record>

    <menuitem id="menu_odoo_analyst" name="Analyst" action="action_odoo_analyst" groups="group_system_odoo_sync"
              web_icon="odoo_analyst_connector,static/description/menu.png"/>

</odoo>
